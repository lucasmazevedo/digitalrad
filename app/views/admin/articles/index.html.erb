      <h1 class="page-header">Notícias <%= link_to 'Cadastrar Novo', new_admin_article_path, class: "btn btn-primary pull-right" %></h1>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">Lista </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Imagem</th>
                                            <th>Título</th>
                                            <th>Categoria</th>
                                            <th>Usuário</th>
                                            <th>Status</th>
                                            <th>Ações</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% @articles.each do |article| %>
                                          <tr>
                                            <td><%= article.id %></td>
                                            <td><%= image_tag article.picture, width: "50px" %></td>
                                            <td><%= article.title %></td>
                                            <td><%= article.category.name %></td>
                                            <td><%= article.user.name %></td>
                                            <td><%= article.statuses %></td>
                                            <td>
                                              <%= link_to 'Exibir', [:admin, article], class: "btn btn-info btn-sm" %>
                                              <%= link_to 'Editar', edit_admin_article_path(article), class: "btn btn-warning btn-sm" %>
                                              <%= link_to 'Excluir', [:admin, article], class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Deseja deletar o registro?' } %>
                                            </td>
                                          </tr>
                                        <% end %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
            </div>