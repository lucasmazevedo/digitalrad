      <h1 class="page-header">Categorias <%= link_to 'Cadastrar Novo', new_admin_category_path, class: "btn btn-primary pull-right" %></h1>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">Lista </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Nome</th>
                                            <th>Status</th>
                                            <th>Ações</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% @categories.each do |category| %>
                                          <tr>
                                            <td><%= category.id %></td>
                                            <td><%= category.name %></td>
                                            <td><%= category.statuses %></td>
                                            <td>
                                              <%= link_to 'Exibir', [:admin, category], class: "btn btn-info btn-sm" %>
                                              <%= link_to 'Editar', edit_admin_category_path(category), class: "btn btn-warning btn-sm" %>
                                              <%= link_to 'Excluir', [:admin, category], class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Deseja deletar o registro?' } %>
                                            </td>
                                          </tr>
                                        <% end %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
            </div>