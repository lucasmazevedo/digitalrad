<h1 class="page-header">Id: # <%= @clinic.id -%></h1>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">Informações</div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-8">
                                  
                                  <div class="form-group">
                                    <label>Caso</label>
                                    <p class="form-control-static"><%= @clinic.name %></p>
                                  </div>
                                 
                                  <div class="form-group">
                                    <label>Título</label>
                                    <p class="form-control-static"><%= @clinic.title %></p>
                                  </div>

                                  <div class="form-group">
                                    <label>Descrição</label>
                                    <p class="form-control-static"><%= @clinic.description.html_safe %></p>
                                  </div>

                                  <div class="form-group">
                                    <label>Status</label>
                                    <p class="form-control-static"><%= @clinic.statuses %></p>
                                  </div>
                                
                                </div>

                                <div class="col-lg-4">
                                   <div class="form-group">
                                    <label>Imagens</label>
                                    <% @clinic.photos.each do |photo| -%>
                                    <p class="form-control-static"><%= image_tag photo, width: "150px" -%></p>
                                    <% end -%>
                                  </div>
                                </div>
                             
                            </div>
                            
                        </div>
                        <div class="panel-footer">
            <%= link_to '<i class="fa fa-chevron-left"></i> Voltar'.html_safe, admin_clinics_path, class: "btn btn-default" %>
            <%= link_to '<i class="fa fa-pencil"></i> Editar'.html_safe, edit_admin_clinic_path(@clinic), class: "btn btn-default" %>
                          
                        </div>
                        
                    </div>
                    
                </div>
                
            </div>
    
