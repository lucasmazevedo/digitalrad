      <h1 class="page-header">Slide Destaque <%= link_to 'Cadastrar Novo', new_admin_feature_path, class: "btn btn-primary pull-right" %></h1>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">Lista </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Titulo</th>
                                            <th>Descrição</th>
                                            <th>Imagem</th>
                                            <th>Texto Botão</th>
                                            <th>Link</th>
                                            <th>Status</th>
                                            <th>Ações</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% @features.each do |feature| %>
                                          <tr>
                                            <td><%= feature.id %></td>
                                            <td><%= feature.title %></td>
                                            <td><%= feature.description %></td>
                                            <td><%= image_tag feature.photo, width: "50px" %></td>
                                            <td><%= feature.textlink %></td>
                                            <td><%= feature.link %></td>
                                            <td><%= feature.statuses %></td>
                                            <td>
                                              <%= link_to 'Exibir', [:admin, feature], class: "btn btn-info btn-sm" %>
                                              <%= link_to 'Editar', edit_admin_feature_path(feature), class: "btn btn-warning btn-sm" %>
                                              <%= link_to 'Excluir', [:admin, feature], class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Deseja deletar o registro?' } %>
                                            </td>
                                          </tr>
                                        <% end %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
            </div>