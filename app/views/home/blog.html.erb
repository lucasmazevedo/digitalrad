<section class="inner-banner">
	<div class="thm-container clearfix">
		<h2 class="pull-left">Blog / Notícias</h2>
		<ul class="breadcumb pull-right">
			<li><%= link_to "<i class=\"fa fa-home\"></i> Início".html_safe, root_path %></li>
			<li><span>Notícias</span></li>
		</ul>
	</div>
</section>

<section class="sec-padding blog-page">
	<div class="thm-container">
		<div class="row">
			<div class="col-md-4 pull-right">
				<div class="single-sidebar-widget">
					<div class="sec-title">
						<h2><span>DigitalRad no facebook</span></h2>
					</div>
					<div class="popular-post">
						<div class="fb-page" data-href="https://www.facebook.com/digitalrad/" data-tabs="timeline" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true"><blockquote cite="https://www.facebook.com/digitalrad/" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/digitalrad/">DigitalRad</a></blockquote></div>
					</div>
				</div>
				
			</div>
			<div class="col-md-8 pull-right">
					
				<div class="single-post-wrapper">


				<% @news.each do |article| -%>
					<article class="single-blog-post img-cap-effect">
						<div class="meta-info">
							<div class="date-box">
								<div class="inner-box">
									<b><%= I18n.l(article.created_at, format: :cday)-%></b>
									<%= I18n.l(	article.created_at, format: :cmonth)-%>
								</div>
							</div>
							<div class="content-box">								
								<ul class="post-links">
									<li><a href="#"><i class="fa fa-tag"></i> Categoria: <%= article.category.name -%></a></li>
									<li><a href="#"><i class="fa fa-comments-o"></i> <%= I18n.l(article.created_at, format: :long)-%></a></li>
								</ul>
							</div>
						</div>
						<h3><%= article.title -%></h3>
						<p><%= truncate(article.description, length: 460, escape: false) -%></p>
						<%= link_to 'Leia Mais', shownews_path(article.id), class: 'read-more' %>
					</article>					
				<% end -%>


				</div>

				<!-- <ul class="page-navigation text-left">
					<li><span>1</span></li>
					<li><a href="#">2</a></li>
					<li><a href="#"><i class="fa fa-long-arrow-right"></i></a></li>
				</ul> -->

			</div>
		</div>
	</div>
</section>
