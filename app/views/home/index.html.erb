<section class="rev_slider_wrapper thm-banner-wrapper">
	<div id="slider1" class="rev_slider"  data-version="5.0">
		<ul>
		<% @features.each do |slide| -%>
			<li data-transition="fade" data-ease="SlowMo.ease">
				<%= image_tag 'slider/1.jpg' -%>
				<div class="tp-caption sfb tp-resizeme"
							data-x="left" data-hoffset="10"
							data-y="top" data-voffset="100"
							data-whitespace="nowrap"
							data-transform_idle="o:1;"
							data-transform_in="o:0"
							data-transform_out="o:0"
							data-start="500">
					<%= image_tag slide.photo.slide -%>
					</div>


					<div class="tp-caption sfb tp-resizeme caption-h1 corgange"
				        data-x="left" data-hoffset="618"
				        data-y="top" data-voffset="90"
				        data-whitespace="normal"
				        data-transform_idle="o:1;"
				        data-transform_in="o:0"
				        data-transform_out="o:0"
				        data-start="500">
						<%= slide.title -%>
				    </div>

					<div class="tp-caption sfb tp-resizeme caption-divider"
				        data-x="left" data-hoffset="618"
				        data-y="top" data-voffset="170"
				        data-whitespace="nowrap"
				        data-transform_idle="o:1;"
				        data-transform_in="o:0"
				        data-transform_out="o:0"
				        data-start="500">
						<span class="divider"></span>
				    </div>

				<div class="tp-caption sfb tp-resizeme caption-p"
			        data-x="left" data-hoffset="618"
			        data-y="top" data-voffset="180"
			        
			        data-transform_idle="o:1;"
			        data-transform_in="o:0"
			        data-transform_out="o:0"
			        data-start="1000">
			        <%= slide.description -%>
			    </div>
				<div class="tp-caption sfl tp-resizeme"
			        data-x="right" data-hoffset="380"
			        data-y="top" data-voffset="360"
			        data-whitespace="nowrap"
			        data-transform_idle="o:1;"
			        data-transform_in="o:0"
			        data-transform_out="o:0"
			        data-start="1500">
					<a href="<%= slide.link -%>" class="thm-btn">Conheça Mais <i class="fa fa-arrow-right"></i></a>
			    </div>
			</li>
			<% end -%>
		</ul>
	</div>
</section>

