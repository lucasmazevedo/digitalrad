<section class="faq-section sec-padding">
	<div class="thm-container">
		<div class="row">
			<div class="col-md-8">
				<div class="sec-title">
					<h2><span>Alguns de Nossos Serviços</span></h2>
				</div>
				<div class="accrodion-grp" data-grp-name="faq-accrodion">

				<% @services.each do |service| -%>
					<div class="accrodion">
						<div class="accrodion-title">
							<h4><%= service.title -%></h4>
						</div>
						<div class="accrodion-content">
							<div class="img-caption">
								<div class="content-box">
									<p><%= service.description.html_safe -%></p>
								</div>
							</div>
						</div>
					</div>
				<% end -%>
				</div>
			</div>
			<div class="col-md-4">
				<div class="sec-title">
					<h2><span>Depoimentos</span></h2>
				</div>
				<div class="testimonial-content-box owl-carousel owl-theme">
				<% @testemonials.each do |testemonial| -%>
					<div class="item">
						<p><%= testemonial.description -%></p>
						<span class="name">- <%= testemonial.name -%></span>
					</div>
					<% end -%>

				</div>
				<div class="testimonail-thumbnail-box owl-carousel owl-theme">
				<% @testemonials.each do |testemonial| -%>
					<div class="item">
						<%= image_tag testemonial.avatar.testemonials -%>
					</div>
				<% end -%>
				</div>
			</div>
		</div>
	</div>
</section>


<section class="latest-blog sec-padding pb0">
	<div class="thm-container">
		<div class="sec-title">
			<h2><span>Blog / Notícias</span></h2>
		</div>
		<div class="row">
			<div class="col-lg-4 hidden-md hidden-sm hidden-xs">
				<div class="featured-post">
					<%= image_tag "blog/featured.jpg" -%>
					<div class="box">
						<div class="box-holder">
							<h3><span><b>Nosso</b> Blog</span></h3>
							<p>Fique por dentro do que acontence na Digital Rad e no mundo!</p>
						</div>
					</div>
				</div>
			</div>
			<div class="col-lg-8 col-md-12">
			<% @news.each do |article| -%>
				<div class="single-blog-post img-cap-effect">
					<div class="img-box">
						<%= image_tag article.picture.news -%>
						<div class="img-caption">
							<div class="box-holder">
								<ul>
									<li><%= link_to '<i class="fa fa-link"></i>'.html_safe, shownews_path(article.id) %></li>
								</ul>
							</div>
						</div>
					</div>
					<div class="content-box">
					<%= link_to shownews_path(article.id) do %>
						<h3><%= article.title -%></h3>
					<% end -%>
						<ul class="meta">
							<li><a href="javascript:void()"><%= article.category.name -%></a></li>
							<li><a href="javascript:void()"><%= I18n.l(article.created_at, format: :long) -%></a></li>
						</ul>
						<p><%= truncate(article.description, length: 210, escape: false) -%></p>
						<%= link_to 'Leia Mais +', shownews_path(article.id) %>
					</div>
				</div>
				<% end -%>
			</div>
		</div>
	</div>
</section>


<section class="our-client sec-padding bottom-has-footer-top">
	<div class="thm-container">
		<div class="client-carousel">
			<div class="owl-carousel owl-theme">
			<% @partners.each do |partner| -%>
				<div class="item">
					<%= image_tag partner.logo.testemonials -%>
				</div>
			<% end -%>	
			</div>
		</div>
	</div>
</section>